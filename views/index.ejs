<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ToDoWebApp</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <!-- FORMS -->
        <div class="form p-10 text-white">
            <form action="/create" method="post">
                <input class="block px-3 py-2 bg-zinc-800 w-full rounded-lg outline-none" type="text" name="title" placeholder="Enter Title here.">
                <textarea class="block px-3 py-2 bg-zinc-800 w-full mt-2 rounded-lg outline-none resize-none" placeholder="Enter Description here." name="description"></textarea>
                <input class="bg-blue-500 px-5 py-2 rounded-lg mt-2" type="submit" value="Create Task">
            </form>
        </div>

        <!-- TASK CARDS -->
        <div class="tasks p-10 flex gap-4 flex-wrap">
            <% if (files.length > 0){ %>
                <% files.forEach((val) => { %>
                    <div class="min-w-72 px-3 py-4 rounded-lg bg-zinc-800">
                        <h1 class="text-white text-3xl tracking-tighter font-bold"> <%= val %></h1>
                        <a class="text-blue-500 inline-block mt-3" href="/file/<%= val %>">Read Description here</a>
                    </div>
                <% })%>
            <% } else { %>
                <h1 class="text-white text-xl font-bold">No Tasks yet.</h1>
            <% }%>
        </div>

    </div>
</body>
</html>